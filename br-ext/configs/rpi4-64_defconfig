# PiTrezor defconfig for Raspberry Pi 4 (64-bit aarch64, bcm2711)
BR2_aarch64=y
BR2_TOOLCHAIN_BUILDROOT_GLIBC=y
# Linux kernel from Raspberry Pi repo (track stable 6.1.y) and match headers
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_CUSTOM_GIT=y
BR2_LINUX_KERNEL_CUSTOM_REPO_URL="https://github.com/raspberrypi/linux.git"
BR2_LINUX_KERNEL_CUSTOM_REPO_VERSION="rpi-6.1.y"
BR2_LINUX_KERNEL_USE_DEFCONFIG=y
BR2_LINUX_KERNEL_DEFCONFIG="bcm2711_defconfig"
BR2_LINUX_KERNEL_DTS_SUPPORT=y
BR2_KERNEL_HEADERS_AS_KERNEL=y
BR2_PACKAGE_RPI_FIRMWARE_VARIANT_PI4=y
# Common target & identity
BR2_INIT_BUSYBOX=y
BR2_GLOBAL_PATCH_DIR=""
BR2_TARGET_GENERIC_HOSTNAME="pitrezor"
BR2_TARGET_GENERIC_ISSUE="PiTrezor (Buildroot)"
BR2_TARGET_GENERIC_REMOUNT_ROOTFS_RW=y
# No login consoles (handled via custom inittab in overlay)
BR2_TARGET_GENERIC_GETTY=n

# Rootfs overlay
BR2_ROOTFS_OVERLAY="$(BR2_EXTERNAL_PITREZOR_PATH)/overlay"

# Raspberry Pi firmware + boot files (use our config/cmdline)
BR2_PACKAGE_RPI_FIRMWARE=y
BR2_PACKAGE_RPI_FIRMWARE_CONFIG_FILE="$(BR2_EXTERNAL_PITREZOR_PATH)/board/pitrezor/config.txt"
BR2_PACKAGE_RPI_FIRMWARE_CMDLINE_FILE="$(BR2_EXTERNAL_PITREZOR_PATH)/board/pitrezor/cmdline.txt"

# Graphics stack (DRM/KMS + SDL2 minimal)
BR2_PACKAGE_LIBDRM=y
BR2_PACKAGE_SDL2=y
BR2_PACKAGE_SDL2_IMAGE=y
BR2_PACKAGE_SDL2_IMAGE_PNG=y

# Input / hotplug
BR2_PACKAGE_EUDEV=y

# Python for emulator launcher
BR2_PACKAGE_PYTHON3=y

# Hardening & helpers
BR2_PACKAGE_IPTABLES=y
BR2_PACKAGE_UTIL_LINUX=y
BR2_PACKAGE_UTIL_LINUX_SETPRIV=y
BR2_PACKAGE_PROCPS_NG=y

# Touchscreen support
BR2_PACKAGE_TSLIB=y
BR2_PACKAGE_EVTEST=y
BR2_PACKAGE_FBI=y

# Root filesystem (ext4) â€” will be mounted read-only via fstab/cmdline
BR2_TARGET_ROOTFS_EXT2=y
BR2_TARGET_ROOTFS_EXT2_4=y
BR2_TARGET_ROOTFS_EXT2_SIZE="256M"
BR2_TARGET_ROOTFS_EXT2_LABEL="rootfs"
BR2_TARGET_ROOTFS_TAR=y

# Image creation (sdcard.img via genimage)
BR2_PACKAGE_HOST_GENIMAGE=y
BR2_PACKAGE_HOST_DOSFSTOOLS=y
BR2_PACKAGE_HOST_MTOOLS=y
BR2_ROOTFS_POST_IMAGE_SCRIPT="$(BR2_EXTERNAL_PITREZOR_PATH)/board/pitrezor/post-image.sh"

# Users (create 'trezor' unprivileged user)
BR2_ROOTFS_USERS_TABLES="$(BR2_EXTERNAL_PITREZOR_PATH)/board/pitrezor/users.txt"
