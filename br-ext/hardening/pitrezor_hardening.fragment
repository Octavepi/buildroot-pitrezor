# Global toolchain and build hardening for PiTrezor

# Stack smashing protection
BR2_SSP_STRONG=y

# Fortify libc functions
BR2_TOOLCHAIN_ENABLE_FORTIFY_SOURCE=y

# Full RELRO
BR2_RELRO_FULL=y

# Position Independent Executables (PIE)
BR2_PIE=y

# Kernel headers must match kernel
BR2_KERNEL_HEADERS_AS_KERNEL=y

# Enforce read-only rootfs
BR2_TARGET_GENERIC_REMOUNT_ROOTFS_RW=n
